<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauchung"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mauchude">

        <ImageButton
            android:id="@+id/ibtn_Exit_phongnhansu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:gravity="center|left"
            android:text="Phòng nhân sự"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_phongban_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.1"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            android:text="Phòng Ban 1"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"/>

        <TextView
            android:id="@+id/txt_phongban_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.1"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:gravity="center|left"
            android:background="@color/white"
            android:text="Phòng Ban 2"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"/>

        <TextView
            android:id="@+id/txt_phongban_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.1"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:gravity="center|left"
            android:background="@color/white"
            android:text="Phòng Ban 3"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"/>

    </LinearLayout>

</LinearLayout>